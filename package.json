{
  "name": "readermate",
  "displayName": "ReaderMate",
  "icon": "icon.png",
  "description": "用于阅读小说的 VS 代码扩展，集成 Reader3 服务器",
  "version": "1.0.0",
  "publisher": "readermate",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "novel",
    "reader",
    "book",
    "reading",
    "text"
  ],
  "activationEvents": [
    "onCommand:readermate.openBookshelf",
    "onView:readermateBookshelf"
  ],
  "main": "./out/extension.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/dnslin/readermate-vscode.git"
  },
  "contributes": {
    "commands": [
      {
        "command": "readermate.openBookshelf",
        "title": "Open Bookshelf",
        "category": "ReaderMate",
        "icon": "$(library)"
      },
      {
        "command": "readermate.openReader",
        "title": "Open Reader"
      },
      {
        "command": "readermate.prevChapter",
        "title": "Previous Chapter"
      },
      {
        "command": "readermate.nextChapter",
        "title": "Next Chapter"
      },
      {
        "command": "readermate.refreshBookshelf",
        "title": "Refresh Bookshelf",
        "icon": "$(refresh)"
      }
    ],
    "keybindings": [
      {
        "command": "readermate.openBookshelf",
        "key": "ctrl+shift+l"
      },
      {
        "command": "readermate.prevChapter",
        "key": "ctrl+left",
        "when": "readermate.readerActive"
      },
      {
        "command": "readermate.nextChapter",
        "key": "ctrl+right",
        "when": "readermate.readerActive"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "readermate",
          "title": "ReaderMate",
          "icon": "$(book)"
        }
      ]
    },
    "views": {
      "readermate": [
        {
          "id": "readermateBookshelf",
          "name": "My Bookshelf"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "readermate.refreshBookshelf",
          "when": "view == readermateBookshelf",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "readermate.openReader",
          "when": "view == readermateBookshelf && viewItem == book"
        }
      ]
    },
    "configuration": {
      "title": "ReaderMate",
      "properties": {
        "readermate.serverUrl": {
          "type": "string",
          "default": "https://reader.me",
          "description": "Reader server base URL"
        },
        "readermate.appendReader3Path": {
          "type": "boolean",
          "default": true,
          "description": "Automatically append /reader3 path to server URL"
        },
        "readermate.username": {
          "type": "string",
          "description": "Username"
        },
        "readermate.token": {
          "type": "string",
          "description": "Access token"
        },
        "readermate.preload.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable chapter preloading feature"
        },
        "readermate.preload.chapterCount": {
          "type": "number",
          "default": 2,
          "minimum": 1,
          "maximum": 5,
          "description": "Number of chapters to preload (1-5 chapters)"
        },
        "readermate.preload.triggerProgress": {
          "type": "number",
          "default": 50,
          "minimum": 30,
          "maximum": 95,
          "description": "Reading progress percentage to trigger preloading (30%-95%)"
        },
        "readermate.preload.maxCacheSize": {
          "type": "number",
          "default": 10,
          "minimum": 5,
          "maximum": 20,
          "description": "Maximum number of cached chapters (5-20 chapters)"
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package --allow-star-activation",
    "build": "pnpm run compile && pnpm run package",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/vscode": "^1.60.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "@vscode/vsce": "^2.15.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4"
  }
}