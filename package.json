{
  "name": "readermate",
  "displayName": "ReaderMate",
  "icon": "icon.png",
  "description": "用于阅读小说的 VS 代码扩展，集成 Reader3 服务器",
  "version": "1.2.2",
  "publisher": "readermate-dnslin",
  "engines": {
    "vscode": "^1.60.0",
    "node": ">=20"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "novel",
    "reader",
    "book",
    "reading",
    "text"
  ],
  "activationEvents": [
    "onCommand:readermate.openBookshelf",
    "onView:readermateBookshelf"
  ],
  "main": "./out/extension.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/dnslin/readermate.git"
  },
  "contributes": {
    "commands": [
      {
        "command": "readermate.openBookshelf",
        "title": "打开书架",
        "category": "ReaderMate",
        "icon": "$(library)"
      },
      {
        "command": "readermate.showConfig",
        "title": "查看生效配置",
        "category": "ReaderMate",
        "icon": "$(gear)"
      },
      {
        "command": "readermate.openReader",
        "title": "打开阅读器"
      },
      {
        "command": "readermate.prevChapter",
        "title": "上一章"
      },
      {
        "command": "readermate.nextChapter",
        "title": "下一章"
      },
      {
        "command": "readermate.refreshBookshelf",
        "title": "刷新书架",
        "icon": "$(refresh)"
      }
    ],
    "keybindings": [
      {
        "command": "readermate.openBookshelf",
        "key": "ctrl+shift+l"
      },
      {
        "command": "readermate.prevChapter",
        "key": "ctrl+left",
        "when": "readermate.readerActive"
      },
      {
        "command": "readermate.nextChapter",
        "key": "ctrl+right",
        "when": "readermate.readerActive"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "readermate",
          "title": "ReaderMate",
          "icon": "$(book)"
        }
      ]
    },
    "views": {
      "readermate": [
        {
          "id": "readermateBookshelf",
          "name": "我的书架"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "readermate.refreshBookshelf",
          "when": "view == readermateBookshelf",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "readermate.openReader",
          "when": "view == readermateBookshelf && viewItem == book"
        }
      ]
    },
    "configuration": {
      "title": "ReaderMate",
      "properties": {
        "readermate.reader.fontSize": {
          "type": "number",
          "default": 16,
          "minimum": 14,
          "maximum": 22,
          "description": "阅读内容字号（px），兼顾可读性"
        },
        "readermate.stealth.enabled": {
          "type": "boolean",
          "default": true,
          "description": "启用隐身模式，便于低调阅读"
        },
        "readermate.stealth.hideToolbar": {
          "type": "boolean",
          "default": true,
          "description": "隐身模式下隐藏工具栏（使用键盘导航）"
        },
        "readermate.stealth.disguiseTitle": {
          "type": "string",
          "default": "输出",
          "description": "隐身模式启用时的标签标题"
        },
        "readermate.serverUrl": {
          "type": "string",
          "default": "https://reader.me",
          "description": "Reader 服务器基础地址"
        },
        "readermate.appendReader3Path": {
          "type": "boolean",
          "default": true,
          "description": "自动在服务器地址后追加 /reader3 路径"
        },
        "readermate.username": {
          "type": "string",
          "description": "用户名"
        },
        "readermate.token": {
          "type": "string",
          "description": "访问令牌"
        },
        "readermate.preload.enabled": {
          "type": "boolean",
          "default": true,
          "description": "启用章节预加载功能"
        },
        "readermate.preload.chapterCount": {
          "type": "number",
          "default": 2,
          "minimum": 1,
          "maximum": 5,
          "description": "预加载的章节数（1-5 章）"
        },
        "readermate.preload.triggerProgress": {
          "type": "number",
          "default": 50,
          "minimum": 30,
          "maximum": 95,
          "description": "达到多少阅读进度时开始预加载（30%-95%）"
        },
        "readermate.preload.maxCacheSize": {
          "type": "number",
          "default": 10,
          "minimum": 5,
          "maximum": 20,
          "description": "缓存中最大保留章节数（5-20 章）"
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package --allow-star-activation --no-dependencies",
    "build": "pnpm run compile && pnpm run package",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/vscode": "^1.60.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "@vscode/vsce": "^2.15.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4"
  }
}